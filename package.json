{
  "name": "liquidator-api",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "dotenv -e ./.env.dev -- nest start",
    "start:dev": "dotenv -e ./.env.dev -- nest start --watch",
    "start:debug": "dotenv -e ./.env.dev -- nest start --debug --watch",
    "start:prod": "dotenv -e ./.env.prod -- node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "dotenv -e ./.env.test -- jest",
    "test:watch": "dotenv -e ./.env.test -- jest --watch",
    "test:cov": "dotenv -e ./.env.test -- jest --coverage",
    "test:debug": "dotenv -e ./.env.test -- node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "dotenv -e ./.env.test -- jest --config ./test/jest-e2e.json --coverage --runInBand --forceExit",
    "db:dev:generate": "dotenv -e ./.env.dev -- drizzle-kit generate --config ./src/drizzle.config.ts",
    "db:dev:migrate": "dotenv -e ./.env.dev -- drizzle-kit migrate --config ./src/drizzle.config.ts",
    "db:test:migrate": "dotenv -e ./.env.test -- drizzle-kit migrate --config ./src/drizzle.config.ts",
    "start:docker:test": "docker-compose -f ./docker-compose.test.yml -p liquidator-test up -d",
    "start:docker:dev": "docker-compose -f ./docker-compose.dev.yml -p liquidator-dev up -d"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/swagger": "^8.0.1",
    "bcryptjs": "^2.4.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "dotenv": "^16.4.5",
    "dotenv-cli": "^7.4.2",
    "drizzle-orm": "^0.35.3",
    "envalid": "^8.0.0",
    "ioredis": "^5.4.1",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.13.1",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/pg": "^8.11.10",
    "@types/supertest": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "drizzle-kit": "^0.26.2",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  }
}
